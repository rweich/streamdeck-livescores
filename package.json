{
  "name": "@rweich/streamdeck-livescores",
  "version": "0.0.0-development",
  "description": "a streamdeck plugin to display live scores of a match",
  "private": true,
  "author": "rweich",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && webpack --mode=development",
    "build-prod": "yarn clean && webpack --mode=production",
    "ci": "yarn type-check && yarn lint && yarn test && yarn set-plugin-version 0.0.0-dev",
    "clean": "rimraf ./dist/*",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "husky install",
    "set-plugin-version": "ts-node build/scripts/set-plugin-version.ts",
    "test": "mocha",
    "type-check": "tsc --noEmit",
    "update-template": "update-template https://github.com/rweich/streamdeck-ts-template"
  },
  "dependencies": {
    "@rweich/streamdeck-events": "^3.0.1",
    "@rweich/streamdeck-formbuilder": "^2.0.1",
    "@rweich/streamdeck-ts": "^4.0.0",
    "@sinclair/typebox": "^0.23.4",
    "ajv": "^8.5.0",
    "axios": "^0.26.0",
    "axios-cache-adapter": "^2.7.3",
    "axios-logger": "^2.5.0",
    "dayjs": "^1.10.5",
    "eventemitter3": "^4.0.7",
    "loglevel": "^1.7.1",
    "loglevel-plugin-prefix": "^0.8.4",
    "p-queue": "^7.1.0",
    "ts-log": "^2.2.3",
    "ts-type-guards": "^0.7.0"
  },
  "devDependencies": {
    "@amille/semantic-release-plugins": "^3.3.5",
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@rweich/eslint-config": "^2.0.1",
    "@rweich/prettier-config": "^2.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.2.15",
    "@types/chai-json-schema": "^1.4.6",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/jsdom": "^16.2.6",
    "@types/jsonfile": "^6.0.0",
    "@types/mocha": "^9.1.0",
    "@types/sinon": "^10.0.2",
    "babel-loader": "^8.2.2",
    "canvas": "^2.6.1",
    "chai": "^4.3.0",
    "chai-json-schema": "^1.5.1",
    "conventional-changelog-conventionalcommits": "^4.6.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "jsonfile": "^6.1.0",
    "lint-staged": "^12.3.4",
    "mocha": "^9.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "sinon": "^13.0.1",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3",
    "update-template": "^1.3.1",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0"
  },
  "engines": {
    "node": ">=14.17"
  },
  "repository": "rweich/streamdeck-livescores",
  "bugs": "https://github.com/rweich/streamdeck-livescores/issues",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "@rweich"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --quiet --fix"
    ]
  },
  "prettier": "@rweich/prettier-config"
}
